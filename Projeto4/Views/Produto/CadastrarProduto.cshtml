@model Projeto4.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastrar Produto</h2>

<form asp-action="CadastrarProduto" method="post">
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Preco"></label>
        <input asp-for="Preco" type="number" step="0.01" />
        <span asp-validation-for="Preco" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" type="number" />
        <span asp-validation-for="Quantidade" style="color:red"></span>
    </div>
    <button type="submit">Salvar</button>
</form>

<a href="/Produto">Voltar para Lista</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
