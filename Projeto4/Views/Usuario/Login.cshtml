@model Projeto4.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" required />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Senha">Senha</label>
        <input asp-for="Senha" type="password" required />
        <span asp-validation-for="Senha" style="color:red"></span>
    </div>

    <button type="submit">Entrar</button>
</form>

@if (ViewBag.MensagemErro != null)
{
    <p style="color:red">@ViewBag.MensagemErro</p>
}

<a href="/">Voltar à Home</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
